<div class="row mt-2">
    <div class="col">
        <div class="card bg-secondary">
            <div class="card-body">
                <h3 class="card-title">Employee - Role</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Employee
                            </th>
                            <th>
                                Role
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in userManager.Users.ToList())
                        {
                            <tr>
                                <td>
                                    @user.FullName
                                </td>
                                <td>
                                    @foreach (var role in (await roleService.ListUserRolesAsync(user)))
                                    {
                                        <p>@role</p>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
