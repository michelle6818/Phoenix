@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Phoenix Issue Tracker</title>
    <link rel="icon" type="image/x-icon" href="~/img/phoenix16.jpg" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&display=swap" rel="stylesheet">
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/assets/css/phoenix.css" />

    <!-- END GLOBAL MANDATORY STYLES -->

</head>
<body style="background-image: url('/img/phoenix100.jpg'); background-repeat:no-repeat; background-size:cover; background-position:center">
    <div class="container-fluid" style="margin-top:12rem">
        @*<div class="row"><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /></div>*@
        <div class="row">
           
            <div class="mr-auto col-5 text-md-left text-center">
                <div class="card bg-transparent">
                    <div class="card-header" style="background-color: #6b6ee6; opacity: 0.95">
                        <h1 class="text-white text-center" style="font-size:70px; font-style:italic; font-weight:bolder">Phoenix</h1>
                    </div>
                    <div class="card-body" style="background-color: #6b6ee6">
                        <div class="row">
                            <div class="col">
                                <h5 class="text-white">Phoenix Issue Tracker is an online ticket tracking software application that utilizes role-based parameters to establish authorization tasks.</h5>
                                <p class="text-white">Phoenix was designed using the MVC design pattern with a Bootrap 4 front end template.  The back end was built with C# ASP.NET Core.</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <a asp-area="" asp-controller="Identity" asp-action="Account" asp-route-id="Register" class="btn pbutton mt-5">Register</a>
                            </div>
                            <div class="col">
                                <a asp-area="" asp-controller="Identity" asp-action="Account" asp-route-id="Login" class="btn pbutton mt-5">Login/Demo</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="bootstrap/js/popper.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <!-- END GLOBAL MANDATORY SCRIPTS -->
</body>
</html>



