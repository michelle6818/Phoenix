@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

@*<h1>@ViewData["Title"]</h1>*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Phoenix Issue Tracker</title>
    <link rel="icon" type="image/x-icon" href="~/img/phoenix16.jpg" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:400,500,600,700&display=swap" rel="stylesheet">
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <link href="~/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/authentication/form-2.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/forms/theme-checkbox-radio.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/forms/switches.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/phoenix.css">

</head>
<body style="background-image: url('/img/phoenix100.jpg'); background-repeat:no-repeat; background-size:cover; background-position:center">
    <div class="container" style="margin-top:8rem;margin-right:20rem;">
        <div class="form-form" style="margin-right:15rem;">

            <div class="form-container">
                <div class="form-content">
                    <form id="account" method="post" class="text-left">
                        <h1 class="text-center">Sign In</h1>
                        <p class="">Log in to your account to continue.</p>

                        <div class="form">
                            <div id="username-field" class="field-wrapper input">
                                @*<label for="username">EMAIL</label>*@
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                <input asp-for="Input.Email" class="form-control" placeholder="Email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div id="password-field" class="field-wrapper input mb-2">
                                <div class="d-flex justify-content-between">
                                    @*<label for="password">PASSWORD</label>*@
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
                                </div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>

                                <input asp-for="Input.Password" class="form-control" placeholder="Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                @*<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="toggle-password" class="feather feather-eye"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>*@
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="d-sm-flex justify-content-between">
                                <div class="field-wrapper">
                                    <button type="submit" class="btn btn-lbutton">Log In</button>
                                </div>
                            </div>


                            <p class="signup-link">Not registered ? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a></p>
                            @*<p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>*@
                        </div>
                    </form>

                </div>


                <div class="form-content ml-2 text-center">
                    <form id="account" method="post" class="text-center">
                        <h1 class="">Demo User</h1>
                        <p class="">Choose a Demo Role to continue.</p>
                        <div class="form-group text-center">
                            <div class="row text-center mt-3">
                                <div class="col align-content-center">
                                    <button type="submit" name="demoEmail" value="DemoAdminEmail" class="btn btn-lbutton">Demo Admin</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col align-content-center">
                                    <button type="submit" name="demoEmail" value="DemoSubEmail" class="btn btn-lbutton">Demo Submitter</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col align-content-center">
                                    <button type="submit" name="demoEmail" value="DemoDevEmail" class="btn btn-lbutton">Demo Developer</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col align-content-center">
                                    <button type="submit" name="demoEmail" value="DemoPMEmail" class="btn btn-lbutton">Demo Project Manager</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>





    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <script src="~/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="~/bootstrap/js/popper.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>

    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <script src="~/assets/js/authentication/form-2.js"></script>

</body>
</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
